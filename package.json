{
  "name": "fluencykaizen-video",
  "version": "0.1.0",
  "private": true,
  "description": "Automated short-form video production for Business English learners",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"bun run dev:client\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:client": "vite",
    "build": "vite build",
    "start": "electron .",
    "dist": "vite build && electron-builder",
    "process": "bun run pipeline/index.ts",
    "preview-all": "bun remotion/preview-all.ts"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@google/generative-ai": "^0.19.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-aspect-ratio": "^1.1.7",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@remotion/bundler": "^4.0.354",
    "@remotion/google-fonts": "4.0.354",
    "@remotion/layout-utils": "4.0.354",
    "@remotion/media-utils": "4.0.354",
    "@remotion/player": "4.0.354",
    "@remotion/renderer": "^4.0.354",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "chokidar": "^3.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dnd-timeline": "^2.2.0",
    "dotenv": "^16.4.7",
    "lucide-react": "^0.544.0",
    "node-pty": "^1.2.0-beta.11",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-resizable-panels": "^3.0.6",
    "react-router-dom": "^7.6.2",
    "remotion": "4.0.354",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/react": "18.3.28",
    "@vitejs/plugin-react": "^4.5.2",
    "autoprefixer": "^10.4.21",
    "bun-types": "latest",
    "concurrently": "^8.2.2",
    "electron": "^35.1.2",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "5.9.3",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.fluencykaizen.video",
    "productName": "FluencyKaizen",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "pipeline/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/node-pty/**"
    ],
    "mac": {
      "target": "dmg"
    }
  }
}
